#!/bin/bash

# OpenShot
function openshot {
    # Add repository
    show_info 'Adding OpenShot Video Editor to software sources...'
    show_warning 'Requires root privileges'
    sudo add-apt-repository ppa:openshot.developers/ppa
	# Update repository information
	show_info 'Updating repository information...'
	sudo apt-get update
	# Install
    echo 'Installing OpenShot Video Editor...'
    show_warning 'Requires root privileges'
    sudo apt-get install -y openshot openshot-doc
    # Install dependencies
	show_info 'Installing OpenShot Video Editor dependencies...'
	show_warning 'Requires root privileges'
	sudo apt-get install -y libavcodec-extra-53 libavformat-extra-53
    # Done
    show_success 'Done.'
    whiptail --title "Finished" --msgbox "Installation complete." 8 78
	thirdparty
}
