#!/bin/bash

# Gparted
function gparted {
	# Add repository
	show_info 'Adding Gparted repository to software sources...'
	show_warning 'Requires root privileges'
	sudo sh -c "echo 'deb http://archive.getdeb.net/ubuntu wily-getdeb apps /' >> /etc/apt/sources.list.d/getdeb.list"
	show_success 'Done.'
	show_question 'Adding repository key...'
	curl -O http://archive.getdeb.net/getdeb-archive.key
	sudo apt-key add - < Release.key 
	show_success 'Done.'
	# Update repository information
	show_info 'Updating repository information...'
	sudo apt-get update
	# Install
	show_info 'Installing Gparted...'
    sudo apt-get install -y gparted
    # Done
    show_success 'Done.'
    whiptail --title "Finished" --msgbox "Installation complete." 8 78
	thirdparty
}
