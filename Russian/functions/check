#!/bin/bash

# Dependency Check
function check {
    show_info "Проверка зависимостей..."
    PKGCHECK=$(dpkg-query -W --showformat='${Status}\n' whiptail|grep "install ok installed")
    if [ "" == "$PKGCHECK" ]; then
        show_info "This script makes use of 'whiptail' and it is not present on your system."
        show_question 'Would you like to install it to continue? (Y)es, (N)o : ' && read REPLY
        echo ''
        case $REPLY in
        # Positive action
        [Yy]* ) 
            show_warning 'Требует привилегий суперпользователя'
            sudo apt-get --force-yes --yes install whiptail
            show_success 'Готово. Proceeding.'
            main
            ;;
        # Negative action
        [Nn]* )
            show_info "Выход.."
            clear && exit 99
            ;;
        # Error
        * )
            clear && show_error '\aИзвините, попробуйте еще раз.' && dependencies
            ;;
        esac
    else
        show_info "Все чисто."
    fi
}
