#!/bin/bash

# Kernel stable
function stable {
if (whiptail --title "Update system kernel" --yesno "Proceed with kernel update?" 10 60) then
	# Download Debian file that matches system architecture
	case `uname -i` in
	    i386|i486|i586|i686)
	        curl -O http://kernel.ubuntu.com/~kernel-ppa/mainline/v4.3.3-wily/linux-headers-4.3.3-040303-generic_4.3.3-040303.201512150130_i386.deb
	        curl -O http://kernel.ubuntu.com/~kernel-ppa/mainline/v4.3.3-wily/linux-headers-4.3.3-040303_4.3.3-040303.201512150130_all.deb
	        curl -O http://kernel.ubuntu.com/~kernel-ppa/mainline/v4.3.3-wily/linux-image-4.3.3-040303-generic_4.3.3-040303.201512150130_i386.deb
	        ;;
	    x86_64)
	        curl -O http://kernel.ubuntu.com/~kernel-ppa/mainline/v4.3.3-wily/linux-headers-4.3.3-040303-generic_4.3.3-040303.201512150130_amd64.deb
	        curl -O http://kernel.ubuntu.com/~kernel-ppa/mainline/v4.3.3-wily/linux-headers-4.3.3-040303_4.3.3-040303.201512150130_all.deb
	        curl -O http://kernel.ubuntu.com/~kernel-ppa/mainline/v4.3.3-wily/linux-image-4.3.3-040303-generic_4.3.3-040303.201512150130_amd64.deb
	        ;;
	    *)
	        show_error "No packages available to download that matches your system." && thirdparty
	        ;; 
	esac
    # Update repository information
    show_info 'Загрузка и установка...'
    show_warning 'Требует привилегий суперпользователя'
    sudo dpkg -i linux-*.deb
    sudo apt-get install -fy
    # Grub-Update
    show_info 'Обновление конфигурации Grub...'
    sudo update-grub
    # Reboot
    show_info 'Перезагрузка...'
    sudo reboot
    # Done
    show_success 'Готово.'
    whiptail --title "Finished" --msgbox "Обновление ядра выполненно." 8 78
    main
else
    clear && main
fi
}

# Kernel unstable
function unstable {
if (whiptail --title "Update system kernel" --yesno "Proceed with kernel update?" 10 60) then
	# Download Debian file that matches system architecture
	case `uname -i` in
	    i386|i486|i586|i686)
	        curl -O http://kernel.ubuntu.com/~kernel-ppa/mainline/v4.4-rc8-wily/linux-headers-4.4.0-040400rc8-generic_4.4.0-040400rc8.201601051225_i386.deb
	        curl -O http://kernel.ubuntu.com/~kernel-ppa/mainline/v4.4-rc8-wily/linux-headers-4.4.0-040400rc8_4.4.0-040400rc8.201601051225_all.deb
	        curl -O http://kernel.ubuntu.com/~kernel-ppa/mainline/v4.4-rc8-wily/linux-image-4.4.0-040400rc8-generic_4.4.0-040400rc8.201601051225_i386.deb
	        ;;
	    x86_64)
	        curl -O http://kernel.ubuntu.com/~kernel-ppa/mainline/v4.4-rc8-wily/linux-headers-4.4.0-040400rc8-generic_4.4.0-040400rc8.201601051225_amd64.deb
	        curl -O http://kernel.ubuntu.com/~kernel-ppa/mainline/v4.4-rc8-wily/linux-headers-4.4.0-040400rc8_4.4.0-040400rc8.201601051225_all.deb
	        curl -O http://kernel.ubuntu.com/~kernel-ppa/mainline/v4.4-rc8-wily/linux-image-4.4.0-040400rc8-generic_4.4.0-040400rc8.201601051225_amd64.deb
	        ;;
	    *)
	        show_error "No packages available to download that matches your system." && thirdparty
	        ;; 
	esac
    # Update repository information
    show_info 'Загрузка и установка...'
    show_warning 'Требует привилегий суперпользователя'
    sudo dpkg -i linux-*.deb
    sudo apt-get install -fy
    # Grub-Update
    show_info 'Обновление конфигурации Grub...'
    sudo update-grub
    # Reboot
    show_info 'Перезагрузка...'
    sudo reboot
    # Done
    show_success 'Готово.'
    whiptail --title "Finished" --msgbox "Обновление ядра выполненно." 8 78
    main
else
    clear && main
fi
}

# Kernel system upgrade
function kernel {
    eval `resize`
    CONF=$(whiptail \
        --notags \
        --title "Update system kernel" \
        --menu "\nWhat would you like to do?" \
        --cancel-button "Go Back" \
        $LINES $COLUMNS $(( $LINES - 12 )) \
        stable        '(Update stable kernel (need reboot)' \
        unstable      '(Update unstable kernel (need reboot)' \
        3>&1 1>&2 2>&3)
     
    exitstatus=$?
    if [ $exitstatus = 0 ]; then
        clear && $CONF
    else
        clear && main
    fi
}
