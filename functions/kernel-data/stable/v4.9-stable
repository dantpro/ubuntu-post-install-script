# Kernel system upgrade
function v4.9-stable {
	eval `resize`
	KERNELS49=$(whiptail \
		--notags \
		--title 'Update system kernel' \
		--menu '\nWhat would you like to do?' \
		--ok-button 'Update' \
		--cancel-button 'Go Back' \
	$LINES $COLUMNS $(( $LINES - 12 )) \
		v4.9 'Update stable (v4.9) kernel (need reboot)' \
		v4.9.1 'Update stable (v4.9.1) kernel (need reboot)' \
		v4.9.2 'Update stable (v4.9.2) kernel (need reboot)' \
		v4.9.3 'Update stable (v4.9.3) kernel (need reboot)' \
		v4.9.4 'Update stable (v4.9.4) kernel (need reboot)' \
		v4.9.5 'Update stable (v4.9.5) kernel (need reboot)' \
	3>&1 1>&2 2>&3)

exitstatus=$?
	if [ $exitstatus = 0 ]; then
		clear && $KERNELS49
	else
		clear && main
	fi
}
