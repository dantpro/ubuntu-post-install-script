######  Исправление кодировки utf-8  ######
gsettings set org.gnome.gedit.preferences.encodings auto-detected "['UTF-8', 'WINDOWS-1251', 'CURRENT', 'ISO-8859-15', 'UTF-16']"

######  Исправление переключения языка  ######
sudo mv /usr/lib/x86_64-linux-gnu/indicator-keyboard-service /usr/lib/x86_64-linux-gnu/indicator-keyboard-service.backup && sudo kill `pgrep indicator-keyboard-service`

sudo dpkg-reconfigure keyboard-configuration
apt-get purge ibus

dconf write /org/gnome/desktop/input-sources/sources «[('xkb', 'us'), ('xkb', 'ru')]»
dconf write /org/gnome/desktop/input-sources/xkb-options «['grp:caps_toggle', 'compose:ralt','grp_led:scroll']»
dconf write /org/gnome/desktop/input-sources/xkb-options/per-window true




ibus-setup
sudo gedit /etc/default/keyboard


XKBOPTIONS=«grp:lctrl_lshift_toggle,terminate:ctrl_alt_bksp»


setxkbmap "us,ru,ua" ",winkeys,winkeys" "grp:menu_toggle,grp_led:scroll,terminate:ctrl_alt_bksp,compose:ralt"


setxkbmap -layout 'us,ru' -option 'grp:alt_shift_toggle,grp_led:scroll'

gsettings set org.gnome.settings-daemon.plugins.keyboard active false
setxkbmap -option "grp:caps_toggle,grp_led:scroll,compose:ralt"

