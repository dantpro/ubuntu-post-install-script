#!/bin/bash

# Git
function git {
  # Add repository
  show_info 'Adding Git to software sources...'
  show_warning 'Requires root privileges'
  sudo add-apt-repository -y ppa:git-core/ppa
	# Update repository information
	show_info 'Updating repository information...'
  show_warning 'Requires root privileges'
	sudo apt-get update
	# Install
  show_info 'Installing Git...'
  show_warning 'Requires root privileges'
  sudo apt-get install -y git git-man git-daemon-run git-daemon-sysvinit git-doc git-el git-email git-gui gitk gitweb git-arch git-cvs git-mediawiki git-svn
  # Done
  show_success 'Done.'
  whiptail --title "Finished" --msgbox "Installation complete." 8 78
	thirdparty
}
