#!/bin/bash

# Cinelerra
function cinelerra {
    # Add repository
    show_info 'Adding Cinelerra to software sources...'
    show_warning 'Requires root privileges'
    sudo add-apt-repository -y ppa:cinelerra-ppa/ppa
	# Update repository information
	show_info 'Updating repository information...'
	sudo apt-get update
	# Install
    echo 'Installing Cinelerra...'
    show_warning 'Requires root privileges'
    sudo apt-get install -y cinelerra-cv
    # Done
    show_success 'Done.'
    whiptail --title "Finished" --msgbox "Installation complete." 8 78
	thirdparty
}
