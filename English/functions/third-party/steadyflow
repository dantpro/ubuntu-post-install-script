#!/bin/bash

# Steadyflow
function steadyflow {
    # Add repository
    show_info 'Adding Steadyflow to software sources...'
    show_warning 'Requires root privileges'
    sudo add-apt-repository -y ppa:sikon/steadyflow
	# Update repository information
	show_info 'Updating repository information...'
	sudo apt-get update
	# Install
    echo 'Installing Steadyflow...'
    show_warning 'Requires root privileges'
    sudo apt-get install -y steadyflow
    # Done
    show_success 'Done.'
    whiptail --title "Finished" --msgbox "Installation complete." 8 78
	thirdparty
}
