#!/bin/bash

# Brackets
function brackets {
	show_info 'Downloading Brackets...'
	# Download Debian file that matches system architecture
	case `uname -i` in
	    i386|i486|i586|i686)
	        curl -O https://github.com/adobe/brackets/releases/download/release-1.6/Brackets.Release.1.6.32-bit.deb
	        ;;
	    x86_64)
	        curl -O https://github.com/adobe/brackets/releases/download/release-1.6/Brackets.Release.1.6.64-bit.deb
	        ;;
	    *)
	        show_error "No packages available to download that matches your system." && thirdparty
	        ;;
	esac
	# Install package(s)
	show_info 'Installing Brackets...'
	show_warning 'Requires root privileges'
	sudo dpkg -i Brackets*.deb
	sudo apt-get install -fy
	# Cleanup and finish
	rm Brackets*.deb
  # Done
  show_success 'Done.'
  whiptail --title "Finished" --msgbox "Installation complete." 8 78
	thirdparty
}
