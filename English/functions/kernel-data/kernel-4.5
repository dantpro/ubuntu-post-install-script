#!/bin/bash

dir="$(dirname "$0")"

source $dir/functions/third-party/theme/placmank

# Kernel system upgrade
function kernel-4.5 {
    eval `resize`
    KERNEL=$(whiptail \
        --notags \
        --title "Update system kernel" \
        --menu "\nWhat would you like to do?" \
        --ok-button "Update" \
        --cancel-button "Go Back" \
        $LINES $COLUMNS $(( $LINES - 12 )) \
        stable        'Update stable (v4.5-wily) kernel (need reboot)' \
        unstable      'Update unstable (v4.5-rc7-wily) kernel (need reboot)' \
        3>&1 1>&2 2>&3)

    exitstatus=$?
    if [ $exitstatus = 0 ]; then
        clear && $KERNEL
    else
        clear && main
    fi
}
